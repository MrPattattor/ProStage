{% extends 'base.html.twig' %}

{% block contenu %}
<center>
<h3 class = "display-4">
    Enregistrer votre nouvelle entreprise
</h3>
</br></br>
</br></br>
</center>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                {{ form_start(vueFormulaire) }}

                
                {{ form_row(vueFormulaire.nom, {'attr' : {'placeholder':"Nom de l'entreprise..."}}) }}

                <label>Activité</label>
                {{ form_widget(vueFormulaire.activite, {'attr' : {'placeholder':"Activité de l'entreprise..."}}) }}
                {{ form_errors(vueFormulaire.nom) }}

                {{ form_row(vueFormulaire.adresse, {'attr' : {'placeholder':"Adresse de l'entreprise..."}}) }}

                {{ form_row(vueFormulaire.siteWeb, {'attr' : {'placeholder':"https://example.com"}}) }}

                {{ form_end(vueFormulaire) }}
            </div>
        </div>
    </div>
{% endblock %}