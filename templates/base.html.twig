<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ProStages{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
        <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
        {% endblock %}
    </head>
    <body>
        
      <div class="container-full">
        <div class="row">
          <div class="col-md-12">

        {% block menu %}
         <div class="p-3 mb-2" style="background-color: lightsteelblue">
          <h1 class="icon-book-open" style="text-align: center; color:white"><a href="{{path('pro_stage_accueil')}}" style="color:white; text-decoration: none"> ProStages </a></h1>
           
          {% if is_granted('ROLE_USER') %}      

          <a href="{{path('app_logout')}}" style="text-decoration: none">
          <h3 class="icon-user" style="text-align: right; color: white">Déconnexion de {{ app.user.prenom }} {{ app.user.nom }}</h3>
          </a>

          {% else %}

          <a href="{{path('app_login')}}" style="text-decoration: none">
          <h3 class="icon-user" style="text-align: right; color: white; text-decoration: none">Connexion</h3>
          </a>

          <a href="{{path('app_register')}}" style="text-decoration: none">
          <p class="icon-user-plus" style="text-align: right; color: white; text-decoration: none"> Pas encore inscrit !!!</p>
          </a>

          {% endif %}
          


        {% endblock %}
          </div>
        </div>
      </div>
      
        {% block contenu %}        
        {% endblock %}

        {% block footer %}
        <p>Site réalisé avec les frameworks <a href="https://symfony.com/">Symfony</a> et <a href="https://getbootstrap.com/">BootStrap</a>.</p>
        {% endblock %}

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="{{asset('/js/bootstrap.min.js')}}"></script>
        {% endblock %}
    </body>
</html>
